<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ViewModels="clr-namespace:ViewModels.ModbusClient;assembly=ViewModels"
             mc:Ignorable="d"
			 d:DesignWidth="500" d:DesignHeight="200"
             x:Class="TerminalProgram.Views.ModbusClient.ModbusRepresentations.Log"
			 x:DataType="ViewModels:ModbusClient_VM">

	<UserControl.Styles>

		<StyleInclude Source="avares://AppDesign/Styles/LogField.axaml"/>

	</UserControl.Styles>
	
	<TextBox Text="{Binding LogData, Mode=OneWay}"
			 TextChanged="TextBox_TextChanged"/>
	
</UserControl>
