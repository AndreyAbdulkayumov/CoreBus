<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 d:DesignWidth="600" d:DesignHeight="200"
			 xmlns:Icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="TerminalProgram.Views.NoProtocol.TransmitMode.Files">

	<UserControl.Styles>

		<StyleInclude Source="avares://AppDesign/Styles/Button.axaml"/>
		<StyleInclude Source="avares://AppDesign/Styles/MenuToolButton.axaml"/>

	</UserControl.Styles>

	<Border BorderBrush="{DynamicResource Group_Color_BorderBrush}"
			BorderThickness="2"
			CornerRadius="4"
			Margin="10">

		<ScrollViewer>

			<StackPanel Orientation="Vertical" Spacing="20"
						Margin="10">

				<ItemsControl ItemsSource="{Binding Files, Mode=TwoWay}"
							  HorizontalAlignment="Stretch" VerticalAlignment="Top">

					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Orientation="Vertical" Spacing="5"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>

					<ItemsControl.ItemTemplate>

						<DataTemplate>

							<StackPanel Orientation="Horizontal" Spacing="10">

								<Button Classes="MenuToolButton"
										ToolTip.Tip="Отправить файл"
										Command="{Binding Command_SendFile}">

									<Icons:MaterialIcon Kind="Play"/>

								</Button>

								<TextBlock Text="{Binding FileName, Mode=OneWay}"
										   MinWidth="100"/>

								<TextBlock Text="{Binding FileExtension, Mode=OneWay}"
										   MinWidth="100"/>

								<Button Classes="MenuToolButton"
										ToolTip.Tip="Удалить файл"
										Command="{Binding Command_RemoveFile}">

									<Icons:MaterialIcon Kind="CloseBold"/>

								</Button>

							</StackPanel>

						</DataTemplate>

					</ItemsControl.ItemTemplate>

				</ItemsControl>

				<Button Content="Добавить файл"
						FontSize="14"
						HorizontalAlignment="Center"
						Command="{Binding Command_AddFile}"/>

			</StackPanel>

		</ScrollViewer>
		
	</Border>
	
</UserControl>
