<Page x:Class="TerminalProgram.Protocols.NoProtocol.UI_NoProtocol"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TerminalProgram.Protocols.NoProtocol"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="820" 
      Background="#FF323232"
      Title="NoProtocol"
      KeyDown="Page_KeyDown"
      Loaded="Page_Loaded">
    
    <Page.Resources>

        <Style x:Key="TX_RX_Field">
            <Setter Property="ItemsControl.Background" Value="#FF464646"/>
            <Setter Property="ItemsControl.Foreground" Value="WhiteSmoke"/>
            <Setter Property="ItemsControl.BorderBrush" Value="#FFABABAB"/>
            <Setter Property="ItemsControl.BorderThickness" Value="1"/>
            <Setter Property="ItemsControl.FontSize" Value="16"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="ItemsControl.Foreground" Value="#FFD2C25A"/>
            <Setter Property="ItemsControl.FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="ItemsControl.Height" Value="30"/>
            <Setter Property="ItemsControl.FontSize" Value="14"/>
        </Style>

    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <TextBox x:Name="TextBox_TX" Grid.Row="0" 
                     Margin="10,0,10,0"
                     Style="{StaticResource TX_RX_Field}"
                     TextWrapping="Wrap"
                     TextChanged="TextBox_TX_TextChanged"/>

            <CheckBox x:Name="CheckBox_CRCF" Grid.Row="1"
                      Foreground="#FFD2C25A"
                      FontSize="14"
                      Margin="60,0,0,0"
                      Content="Окончание строки CR + LF (&quot;\r\n&quot;)"
                      HorizontalAlignment="Left" VerticalAlignment="Center"
                      Click="CheckBox_CRCF_Click"/>

            <RadioButton x:Name="RadioButton_Char" Grid.Row="1"
                         Margin="0,0,200,0" 
                         Content="Символ" 
                         HorizontalAlignment="Right" VerticalAlignment="Center" 
                         Checked="RadioButton_Char_Checked"/>

            <RadioButton x:Name="RadioButton_String" Grid.Row="1" 
                         Margin="0,0,130,0" 
                         Content="Строка"
                         HorizontalAlignment="Right" VerticalAlignment="Center" 
                         Checked="RadioButton_String_Checked"/>

            <Button x:Name="Button_Send" Grid.Row="1" Template="{DynamicResource ButtonCommon}"
                    Margin="0,0,20,0" 
                    Width="90" 
                    Content="Отправить"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Click="Button_Send_Click"/>

        </Grid>

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="10,0,10,0">

                <ScrollViewer x:Name="ScrollViewer_RX" VerticalContentAlignment="Stretch">

                    <TextBox x:Name="TextBox_RX" Style="{StaticResource TX_RX_Field}"
                             IsReadOnly="True"
                             IsReadOnlyCaretVisible="True" IsUndoEnabled="False"
                             MaxLines="50"
                             MaxLength="300"
                             TextAlignment="Left" TextWrapping="Wrap"/>
                   
                </ScrollViewer>

            </Border>

            <Button x:Name="Button_SaveAs" Grid.Row="1" Template="{DynamicResource ButtonCommon}"
                    Margin="20,0,0,0" 
                    Width="120" 
                    Content="Сохранить как..."
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                    Click="Button_SaveAs_Click"/>
            
            <CheckBox x:Name="CheckBox_NextLine" Grid.Row="1"
                      Foreground="#FFD2C25A"
                      FontSize="14"
                      Margin="180,0,0,0"
                      Content="Переходить на новую строку в конце полученного сообщения"
                      HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Button x:Name="Button_ClearFieldRX" Grid.Row="1" Template="{DynamicResource ButtonCommon}"
                    Margin="0,0,20,0"
                    Width="120" 
                    Content="Очистить поле"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Click="Button_ClearFieldRX_Click"/>

        </Grid>
        
    </Grid>
    
</Page>
