<Page x:Class="TerminalProgram.Protocols.Modbus.UI_Modbus"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TerminalProgram.Protocols.Modbus"
      mc:Ignorable="d" 
      d:DesignHeight="620" d:DesignWidth="820" 
      Background="#FF323232"
      Title="Modbus">

    <Page.Resources>

        <Style TargetType="Button">
            <Setter Property="ItemsControl.Height" Value="30"/>
            <Setter Property="ItemsControl.FontSize" Value="14"/>
        </Style>

        <Style x:Key="ColumnHeaderStyle_Custom" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style x:Key="RowStyle_Custom" TargetType="{x:Type DataGridCell}">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
        </Style>

    </Page.Resources>
    
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="360"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Grid x:Name="Grid_CommonInfo" Grid.Row="0">
            <TextBlock Text="Режим обмена данными:"
                   Margin="20,10,0,0"
                   FontSize="16"
                   Foreground="#FFD2C25A"
                   HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <TextBlock x:Name="TextBlock_ModbusMode"
                       Text="не определено"
                       Margin="220,10,0,0"
                       FontSize="16"
                       Foreground="#FFFFAD1B"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <TextBlock Text="Slave ID"
                       Margin="480,10,0,0"
                       FontSize="16"
                       Foreground="#FFD2C25A"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <TextBox x:Name="TextBox_SlaveID"
                     Height="25" Width="40"
                     FontSize="14"
                     Margin="550,10,0,0"
                     HorizontalAlignment="Left" VerticalAlignment="Top" 
                     TextChanged="TextBox_SlaveID_TextChanged"/>
        </Grid>

        <DataGrid x:Name="DataGrid_ModbusData" Grid.Row="1" 
                  Height="360"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  FontSize="14"
                  Background="#FF464646"
                  BorderBrush="#FFABABAB"
                  BorderThickness="1"
                  RowBackground="#FFDFDFDF"
                  AlternatingRowBackground="#FFBBBBBB"
                  HorizontalGridLinesBrush="#FFABABAB"
                  VerticalGridLinesBrush="#FFABABAB"
                  VerticalScrollBarVisibility="Visible"
                  CellStyle="{StaticResource RowStyle_Custom}"
                  HorizontalAlignment="Center" VerticalAlignment="Top">

            <DataGrid.Columns>
                
                <DataGridTextColumn 
                    Header="ID" 
                    Binding="{Binding Path=OperationID}"
                    HeaderStyle="{StaticResource ColumnHeaderStyle_Custom}"
                    Width="100">
                </DataGridTextColumn>
                
                <DataGridTextColumn 
                    Header="Функция"  
                    Binding="{Binding Path=FuncNumber}" 
                    HeaderStyle="{StaticResource ColumnHeaderStyle_Custom}"
                    Width="150"/>
                
                <DataGridTextColumn
                    Header="Адрес" 
                    Binding="{Binding Path=ViewAddress}" 
                    HeaderStyle="{StaticResource ColumnHeaderStyle_Custom}"
                    Width="150"/>
                
                <DataGridTextColumn
                    Header="Данные" 
                    Binding="{Binding Path=ViewData}" 
                    HeaderStyle="{StaticResource ColumnHeaderStyle_Custom}"
                    Width="150"/>
                
            </DataGrid.Columns>
            
        </DataGrid>

        <Grid x:Name="Grid_Controls" Grid.Row="2">
            
            <TextBlock Text="Адрес"
                       Margin="220,60,0,0"
                       FontSize="16"
                       Foreground="#FFD2C25A"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <TextBox x:Name="TextBox_Address"
                     Height="25" Width="60"
                     FontSize="14"
                     Margin="290,60,0,0"
                     HorizontalAlignment="Left" VerticalAlignment="Top" 
                     TextChanged="TextBox_Address_TextChanged"/>

            <TextBlock Text="Значение"
                       Margin="410,60,0,0"
                       FontSize="16"
                       Foreground="#FFD2C25A"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <TextBox x:Name="TextBox_Data"
                     Height="25" Width="60"
                     FontSize="14"
                     Margin="500,60,0,0"
                     HorizontalAlignment="Left" VerticalAlignment="Top" 
                     TextChanged="TextBox_Data_TextChanged"/>

            <Button x:Name="Button_Read" Template="{DynamicResource ButtonCommon}"
                    Content="Прочитать"
                    Width="100"
                    Margin="0,110,180,0"
                    HorizontalAlignment="Center" VerticalAlignment="Top" 
                    Click="Button_Read_Click"/>

            <Button x:Name="Button_Write" Template="{DynamicResource ButtonCommon}"
                    Content="Записать"
                    Width="100"
                    Margin="180,110,0,0"
                    HorizontalAlignment="Center" VerticalAlignment="Top" 
                    Click="Button_Write_Click"/>
        </Grid>
        
    </Grid>
    
</Page>
