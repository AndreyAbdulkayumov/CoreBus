<Window x:Class="TerminalProgram.Select"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TerminalProgram"
        mc:Ignorable="d"
        Height="160" Width="300"
        WindowStyle="ToolWindow" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        KeyDown="Window_KeyDown"         
        Closing="Window_Closing">
    
    <Grid>

        <Border Background="#FF323232"
                BorderThickness="1"
                BorderBrush="#FFABABAB"/>
        
        <TextBlock Text="Выберите файл настроек" 
                   Margin="0,20,0,0"
                   Foreground="#FFD2C25A"
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>
        
        <ComboBox x:Name="ComboBox_SelectedDocument" 
                  Margin="0,50,0,0" 
                  Width="140" 
                  HorizontalAlignment="Center" VerticalAlignment="Top"/>
        
        <Button x:Name="Button_Select" Content="Выбрать" 
                Margin="0,90,0,0"
                Width="75"
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                Click="Button_Select_Click"/>
    
    </Grid>
    
</Window>
