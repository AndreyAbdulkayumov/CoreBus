<Window x:Class="TerminalProgram.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TerminalProgram"
        mc:Ignorable="d"
        Title="О программе" 
        Height="200" Width="300" 
        ResizeMode="NoResize" 
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    
    <Grid>

        <Border Background="#FF323232"
                BorderBrush="#FFABABAB"
                BorderThickness="1,1,1,1"/>

        <TextBlock Text="Разработал:"
                   Margin="0,0,0,130"
                   Foreground="#FFB1A972"
                   FontSize="18"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Text="Абдулкаюмов Андрей Ренатович"
                   Margin="0,0,0,10"
                   Width="120"
                   Foreground="#FFD2C25A"
                   FontSize="18"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Text="Версия:"
                   Margin="0,110,50,0"
                   Foreground="#FFB1A972"
                   FontSize="18"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBlock Text="1.6.1"
                   Margin="70,110,0,0"
                   Foreground="#FFD2C25A"
                   FontSize="18"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
    
</Window>
