<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:CoreBus.Base.Views.ModbusClient.Monitoring;assembly=CoreBus.Base"
             xmlns:ViewModels="clr-namespace:ViewModels.ModbusClient.Monitoring;assembly=ViewModels"
             mc:Ignorable="d" 
             d:DesignWidth="1000" d:DesignHeight="550"
             x:Class="CoreBus.Base.Views.ModbusClient.Monitoring.ModbusMonitoring_View"
             x:DataType="ViewModels:ModbusMonitoring_VM">

    <UserControl.Styles>

		<StyleInclude Source="avares://AppDesign/Styles/InputField.axaml"/>
        <StyleInclude Source="avares://AppDesign/Styles/GridSplitter.axaml"/>

	</UserControl.Styles>

    <Grid RowDefinitions="100,3,1*">

        <Border Grid.Row="0"
                BorderBrush="{DynamicResource Group_Color_BorderBrush}"
			    BorderThickness="2"
			    CornerRadius="4"
			    Margin="10">

            <Grid>
				


            </Grid>

        </Border>

        <GridSplitter Grid.Row="1"
                      ResizeDirection="Rows"/>

        <ScrollViewer Grid.Row="2">

			<StackPanel Orientation="Vertical" Spacing="20"
						Margin="10">

				<ItemsControl ItemsSource="{Binding MonitoringItems, Mode=TwoWay}"
							  HorizontalAlignment="Stretch" VerticalAlignment="Top">

					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Orientation="Vertical" Spacing="5"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>

					<ItemsControl.ItemTemplate>

						<DataTemplate>
							<local:MonitoringItem/>
						</DataTemplate>

					</ItemsControl.ItemTemplate>

				</ItemsControl>

				<Button Content="Добавить регистр"
						FontSize="14"
						HorizontalAlignment="Center"
						Command="{Binding Command_AddRegister}"/>

			</StackPanel>

		</ScrollViewer>

    </Grid>
	

</UserControl>
