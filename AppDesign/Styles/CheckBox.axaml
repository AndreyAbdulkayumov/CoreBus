<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="CheckBox">

		<!-- Rectangle -->
		
		<Style Selector="^:checked /template/ Border#NormalRectangle">
			<Setter Property="Background" Value="{DynamicResource Swicher_Color_Checked}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource Swicher_Color_Checked}"/>
		</Style>
		
		<Style Selector="^:pointerover:checked /template/ Border#NormalRectangle">
			<Setter Property="Background" Value="{DynamicResource Swicher_Color_Checked_PointerOver}"/>
			<Setter Property="BorderBrush" Value="{DynamicResource Swicher_Color_Checked_PointerOver}"/>
		</Style>
		
		<!-- TextElement -->
		
		<Style Selector="^:pointerover /template/ ContentPresenter">
			<Setter Property="TextElement.Foreground" Value="{DynamicResource App_Color_Text}"/>
		</Style>

		<Style Selector="^:disabled /template/ ContentPresenter">
			<Setter Property="TextElement.Foreground" Value="{DynamicResource App_Color_Text}"/>
		</Style>

	</Style>
	
</Styles>
