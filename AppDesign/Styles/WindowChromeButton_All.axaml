<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:Icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia">

	<Style Selector="Button.WindowChromeButton_All">

		<Setter Property="Background" Value="{DynamicResource WindowChrome_Color_MinimizeApp_Background}"/>
		<Setter Property="Height" Value="25"/>
		<Setter Property="Width" Value="25"/>
		<Setter Property="CornerRadius" Value="0"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
		<Setter Property="VerticalAlignment" Value="Stretch"/>

		<Style Selector="^:pointerover /template/ ContentPresenter">
			<Setter Property="Background" Value="{DynamicResource WindowChrome_Color_MinimizeApp_MouseOver_Background}"/>
		</Style>
		
		<Style Selector="^:pressed /template/ ContentPresenter">
			<Setter Property="Background" Value="{DynamicResource WindowChrome_Color_MinimizeApp_Pressed_Background}"/>
		</Style>
		
		<Style Selector="^ TextBlock">
			<Setter Property="Foreground" Value="Black"/>
		</Style>

		<Style Selector="^ Icons|MaterialIcon">
			<Setter Property="Foreground" Value="{DynamicResource WindowChrome_Color_Button_Foreground}"/>
			<Setter Property="Height" Value="20"/>
			<Setter Property="Width" Value="20"/>
		</Style>

	</Style>
	
</Styles>
