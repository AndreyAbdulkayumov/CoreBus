<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style Selector="SelectableTextBlock">

		<Setter Property="Foreground" Value="{DynamicResource App_Color_Text}"/>
		<Setter Property="SelectionBrush" Value="#91C1E6"/> <!-- Для всех тем -->

		<Style Selector="^ ToolTip">

			<Setter Property="Background" Value="WhiteSmoke"/> <!-- Для всех тем -->

			<Style Selector="^ TextBlock">
				<Setter Property="Foreground" Value="Black"/> <!-- Для всех тем -->
			</Style>

		</Style>
		
	</Style>
	
</Styles>
